<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:title="@string/pref_support_dice_header">
        <ListPreference
            android:defaultValue="2"
            android:entries="@array/pref_support_dice_x"
            android:entryValues="@array/pref_support_dice_x"
            android:key="sync_frequency"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_support_dice_y_title" />
        <ListPreference
            android:defaultValue="4"
            android:entries="@array/pref_support_dice_y"
            android:entryValues="@array/pref_support_dice_y"
            android:key="sync_frequency"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_support_dice_y_title" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_acts_header"
        android:key="@string/pref_acts_key">
        <ListPreference
            android:defaultValue="4"
            android:entries="@array/pref_number_of_acts"
            android:entryValues="@array/pref_number_of_acts"
            android:key="@string/pref_acts_number_key"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:summary="@string/pref_acts_summary"
            android:title="@string/pref_acts_title" />
    </PreferenceCategory>

</PreferenceScreen>